
{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react", "jest", "prettier"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "rules": {
    "prettier/prettier": ["warn", {
      "singleQuote": true,
      "trailingComma": "es5",
      "semi": false
    }],
    "react/prop-types": "off",
    "react/no-unescaped-entities": "off",
    "no-unused-vars": ["error", {"args": "none"}]
  },
  "globals": {
    "navigator": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
